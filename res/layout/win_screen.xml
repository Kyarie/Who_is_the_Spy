<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/winscreen_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="5"
    android:layout_gravity="center" >
    
    <LinearLayout
        android:id="@+id/winscreen_top"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2" >
        
        <ImageView
            android:id="@+id/winner_announce"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        
        	android:contentDescription=""    
            />
        
         <ImageView
            android:id="@+id/winner_announce2"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"        
        	android:contentDescription=""    
            />
        
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/winscreen_bottom"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >
    
	    <TextView
	        android:id="@+id/win_winner"
	        style="@style/WinScreen_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	    
	    <TextView
	        android:id="@+id/blank_holder"
	        style="@style/WinScreen_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/win_winner" />
	    
	    <TextView
	        android:id="@+id/win_word_spy"
	        style="@style/WinScreen_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/blank_holder" />
	    
	    <TextView
	        android:id="@+id/win_word_civilian"
	        style="@style/WinScreen_textview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/win_word_spy" />
		
	    <Button
	        android:id="@+id/continue_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/home_button" 
	        android:text="@string/continue_button"
	        android:layout_centerHorizontal="true" />
	    
	    <Button
	        android:id="@+id/home_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="60dp"	        
	        android:text="@string/home_button"
	        android:layout_centerHorizontal="true" />
    
    </RelativeLayout>

</LinearLayout>
