<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="MainMenu_title" parent="android:Theme.NoTitleBar">
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:textColor">#FF6633</item>
        <item name="android:typeface">monospace</item>       
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="PrepScreen_text" parent="android:Theme.NoTitleBar">
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:textColor">#FF8C1A</item>
        <item name="android:typeface">monospace</item>       
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="PrepScreen_edittext" parent="android:Theme.Holo.NoActionBar">
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">40dp</item> 
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item> 
        <item name="android:layout_gravity">center</item>
    </style>
    
    <style name="GameScreen_textview" parent="android:Theme.Holo.NoActionBar">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item> 
        <item name="android:typeface">monospace</item>    
    </style>
    
    <style name="Menu_Tabs" parent="android:Theme.Holo.NoActionBar">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_width">wrap_content</item> 
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    
    <style name="WinScreen_textview" parent="android:Theme.Holo.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerHorizontal">true</item> 
    </style>
    
</resources>
